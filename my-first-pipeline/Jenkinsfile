pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }
  stages {
    stage('Test') {
      steps {
        sh 'node --version'
      }
    }
   
  }
   stages {
   stage('Download') {
      steps {
        sh '''
                    
                    apt install git
                    echo 'git --version'
        '''
      }
    }
   }
}
